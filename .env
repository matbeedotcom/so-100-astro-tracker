# ROS2 Configuration
ROS_DOMAIN_ID=0
ROS_LOCALHOST_ONLY=0

# Display configuration for GUI apps (Linux)
DISPLAY=:0

# Robot operation mode
# Options: simulation, hardware, mock
ROBOT_MODE=simulation

# Star Tracker Configuration
TRACKER_MODE=auto

# Observer location (replace with your actual coordinates)
# Example: New York City
LOCATION_LAT=40.7128
LOCATION_LON=-74.0060
LOCATION_ALT=10.0

# Target celestial object
# Options: sun, moon, polaris, sirius, vega, custom
TARGET_OBJECT=polaris

# Custom target (RA/Dec in degrees, used when TARGET_OBJECT=custom)
CUSTOM_RA=0.0
CUSTOM_DEC=0.0

# Camera settings
CAMERA_EXPOSURE=1000  # microseconds
CAMERA_GAIN=1.0
CAMERA_FPS=30

# Tracking update rate (Hz)
TRACKING_RATE=1.0

# Hardware serial port (for physical robot)
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD=1000000